@{
    ViewData["Title"] = "Home - Vehicle Rental System";
}

<!-- Welcome Section -->
<div class="about-section section-with-border">
    <div class="container text-center">
        <h1 class="display-4">Welcome to Vehicle Rental System</h1>
        <p class="lead">
            Our system is your ultimate solution to efficiently manage vehicles, rentals, and customers.
            Whether you're a small business or a large company, we streamline your operations to save time and improve accuracy.
        </p>
       
    </div>
</div>



<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <h2 </h2>
        <h2 </h2>
        <h2 class="text-center mb-4">Features of the System</h2>
        <div class="row">
            <div class="custom-card">
                <h5>Manage Customers</h5>
                <p>Add, edit, or delete customer records and manage customer data.</p>
                <a href="@Url.Action("Index", "Customers")" class="btn btn-primary custom-btn">Go to Customers</a>
            </div>
            <div class="custom-card">
                <h5>Manage Vehicles</h5>
                <p>Add, edit, or delete vehicles and view vehicle details.</p>
                <a href="@Url.Action("Index", "Vehicles")" class="btn btn-primary custom-btn">Go to Vehicles</a>
            </div>
            <div class="custom-card">
                <h5>Manage Rentals</h5>
                <p>Create, update, and track rental transactions and customer rentals.</p>
                <a href="@Url.Action("Index", "Rentals")" class="btn btn-primary custom-btn">Go to Rentals</a>
            </div>
            <div class="custom-card">
                <h5>View Reports</h5>
                <p>View reports on rental statistics and vehicle usage.</p>
                <a href="@Url.Action("Reports", "Home")" class="btn btn-primary custom-btn">Go to Reports</a>
            </div>
        </div>
    </div>
</div>


<!-- About Section -->
<div class="about-section section-with-border">
    <div class="container text-center py-5">
        <h2>About the System</h2>
        <p class="mt-3">
            The Vehicle Rental System is designed to revolutionize the way rental businesses operate.
            By leveraging modern technology, the system provides tools for businesses to manage their fleet, customers, and rental transactions all in one place.
        </p>
        <p>
            Our goal is to simplify processes and improve productivity by offering features such as real-time rental tracking, detailed reporting, and customer management.
            With data encryption and secure transactions, you can ensure the safety and confidentiality of your business information.
        </p>
        
    </div>
</div>


